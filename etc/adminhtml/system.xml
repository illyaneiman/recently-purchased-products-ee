<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="ineiman_recently_purchased" translate="label" type="text" sortOrder="30" showInDefault="1"
                 showInWebsite="1" showInStore="1">
            <label>Recently Purchased</label>
            <tab>ineiman</tab>
            <resource>Ineiman_RecentlyPurchased::ineiman_recentlypurchased</resource>
            <group id="recently_purchased_group" translate="label" type="text" sortOrder="20" showInDefault="1"
                   showInWebsite="1" showInStore="1">
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
